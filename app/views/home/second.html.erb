<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Палочки</title>
	<style>
	body {background-color: black;
		color: white;}

	</style>
	</head>
	<body>
		<h1>Игра Палочки.</h1>
		
		<script>
		
		var searchstr=window.location.search.toString();
		var arr=new Array(4);
		var str=searchstr;
		var n=0;
		for(var i=0;i<4;i++){
			n=str.indexOf("=");
			str=str.substr(n+1);
			arr[i]=parseInt(str);
		}	
		count=arr[2];

		document.write('Сервер взял: ');

		document.write(arr[1]);
		

		document.write('<br>');


		if (arr[0]<=0) {
			alert('Браузер выиграл');
			window.location = '/home/index/?win=Browser&c=' + count + '&id=' + arr[3];
		}

		else{
			count++;
			var a;
			var key= Math.random();

			if (arr[0]==3) {
				a=2;
			} else if ((arr[0]==2)||(arr[0]==1)) {
				a=1;
			} else {
				if (key<=0.33) {
					a=1;
				}
				if ((key>0.33)&&(key<0.66)) {
					a=2;
				}
				if (key>0.66) {
					a=3;
				}
			}

			document.write('Браузер взял: ');

			document.write(a);
			

			document.write('<br>');


			arr[0]=arr[0]-a;

			document.write('Палочек осталось: ');
			document.write(arr[0]);
			


			if (arr[0]<=0) {
				alert('Сервер выиграл');
				window.location = '/home/index/?win=Server&c='+ count + '&id=' + arr[3];
			}
			else {
				window.location = "/home/redirector"+ "?a=" + arr[0] + "&b=" + a + "&c=" + count + "&id=" + arr[3];
			}
		}
		
		</script>
		
	</body>